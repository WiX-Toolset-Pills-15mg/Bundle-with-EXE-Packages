<Wix
    xmlns="http://schemas.microsoft.com/wix/2006/wi"
    xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

    <Fragment>

        <util:RegistrySearch
            Id="Installer1ExistsSearch"
            Root="HKLM"
            Key="SOFTWARE\DustInTheWind\BundleWithExePackages-Installer1"
            Win64="yes"
            Result="exists"
            Variable="Installer1IsInstalled" />

        <PackageGroup Id="Installer1PackageGroup">
            <ExePackage
                Id="Installer1Package"
                SourceFile="$(var.Installer1.TargetDir)$(var.Installer1.TargetName).exe"
                DetectCondition="Installer1IsInstalled = 1"
                DisplayName="Installer1"
                Compressed="yes"
                Cache="no"
                PerMachine="yes"
                Permanent="no"
                Vital="yes"
                InstallCommand="action=install installdir=&quot;c:\Program Files\BundleWithExePackages\Installer1&quot; message=&quot;[Message1]&quot;"
                UninstallCommand="action=uninstall">

                <ExitCode Value="-1" Behavior="error" />
                <ExitCode Value="0" Behavior="success" />

                <Payload SourceFile="$(var.Installer1.TargetDir)$(var.Installer1.TargetName).dll"/>
                <Payload SourceFile="$(var.Installer1.TargetDir)$(var.Installer1.TargetName).deps.json"/>
                <Payload SourceFile="$(var.Installer1.TargetDir)$(var.Installer1.TargetName).runtimeconfig.json"/>

            </ExePackage>
        </PackageGroup>


    </Fragment>
</Wix>